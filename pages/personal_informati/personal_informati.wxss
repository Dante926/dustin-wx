.container {
  padding: 20rpx;
}

.avatar-wrap {
  position: relative;
  margin-bottom: 20rpx;
}

.avatar-img {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
}

.edit-icon {
  position: absolute;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, .5);
  border-radius: 50%;
  padding: 5rpx;
}

.user-info {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, .1);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-label {
  font-size: 40rpx;
  color: #999;
  margin-top: 50rpx;
}

.item-value {
  font-size: 40rpx;
  margin-top: 50rpx;
}