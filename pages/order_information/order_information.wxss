/* pages/order_information/order_information.wxss */
/* orders.wxss */
.container {
  padding: 20px;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 20px;
}

.order-list {
  margin-top: 10px;
}

.order-item {
  margin-bottom: 20px;
  background-color: #f5f5f5;
  padding: 10px;
  border-radius: 5px;
}

.status {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
}

.sub-title {
  color: #999;
  margin-bottom: 10px;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 5px;
}

.label {
  width: 120px;
  font-weight: bold;
}