<!-- orders.wxml -->
<view class="container">
  <view class="title">历史订单</view>
  <view>
    <block wx:if="{{flag}}">
      <view wx:for="{{Machine}}" data-item="item" wx:for-index="idx">
        <view class="box2">
          <view class="box3">2024-09-20 15:11:30</view>
          <view class="box4">
            <view class="t1">{{Machine[item]==0? '取纸机01':'取纸机02'}}</view>
            <view class="t2">{{spending[idx]}}元</view>
          </view>
        </view>
      </view>
    </block>
    <block wx:else>
      <image class="box1" src="../../images/empty3.jpg"></image>
    </block>
  </view>
</view>